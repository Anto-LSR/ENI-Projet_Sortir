{% extends 'base.html.twig' %}

{% block title %}Hello UserController!{% endblock %}

{% block body %}
<style>
    .example-wrapper {
        margin: 1em auto;
        max-width: 800px;
        width: 95%;
        font: 18px/1.5 sans-serif;
    }

    .example-wrapper code {
        background: #F5F5F5;
        padding: 2px 6px;
    }
</style>

<div class="example-wrapper">
    <h1>Hello {{ user.pseudo }}! âœ…</h1>
    <div class="row text-center">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
    </div>

    {{ form_start(modifProfilForm) }}
    {{ form_row(modifProfilForm.nom) }}
    {{ form_row(modifProfilForm.prenom) }}
    {{ form_row(modifProfilForm.pseudo) }}
    {{ form_row(modifProfilForm.email) }}
    {{ form_row(modifProfilForm.telephone) }}
    <div class="mb-3">
        <label for=     "verifPassword" class="form-label required">Mot de passe</label>
        <input type=    "password"
               id=      "verifPassword"
               name=    "verifPassword"
               required="required"
               maxlength=""
               class=   "form-control"
               value="">
    </div>
    <div class="button_row d-flex mt-5  justify-content-between">
        {{ form_row(modifProfilForm.submit, {'attr': {'class': ' btn-success'}}) }}
        {{ form_row(modifProfilForm.Annuler,  {'attr': {'class': ' btn-danger'}}) }}
        {{ form_row(modifProfilForm.ModifMDP,  {'attr': {'class': ' btn-primary'}} )}}
    </div>

    {{ form_rest(modifProfilForm)}}

{{ form_errors(modifProfilForm) }}
{{ form_end(modifProfilForm) }}
</div>
{% endblock %}
