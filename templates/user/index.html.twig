{% extends 'base.html.twig' %}

{% block title %}Mon Profil{% endblock %}

{% block body %}
<style>
    .example-wrapper {
        margin: 1em auto;
        max-width: 800px;
        width: 95%;
        font: 18px/1.5 sans-serif;
    }

    .example-wrapper code {
        background: #F5F5F5;
        padding: 2px 6px;
    }
</style>

<div class="example-wrapper">
    <h1 class="text-center mb-5 mt-5">Vos informations</h1>
    <div class="row text-center">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
    </div>
    <h4>{{  app.user.prenom }} {{ app.user.nom }}</h4>
    {% if app.user.photo %}
    <img src="{{ asset(app.user.photo) }}" alt="" class="profile_image">
    {% endif %}
    {{ form_start(modifProfilForm) }}
    {{ form_label(modifProfilForm.pseudo, "Pseudo") }} <span class="text-danger">*</span>
    {{ form_widget(modifProfilForm.pseudo) }}
    {{ form_label(modifProfilForm.email, "Email") }} <span class="text-danger">*</span>
    {{ form_widget(modifProfilForm.email) }}
    {{ form_row(modifProfilForm.telephone) }}
    {{ form_row(modifProfilForm.photo) }}
    <div class="mb-3">
        <label for=     "verifPassword" class="form-label required">Mot de passe <span class="text-danger">*</span></label>
        <input type=    "password"
               id=      "verifPassword"
               name=    "verifPassword"
               required="required"
               maxlength=""
               class=   "form-control"
               value="">
    </div>
    <div class="button_row d-flex mt-5  justify-content-between">
        {{ form_row(modifProfilForm.submit, {'attr': {'class': ' btn-success'}}) }}
        <a href="/"> {{ form_row(modifProfilForm.Annuler,  {'attr': {'class': ' btn-danger'}}) }}</a>
        <a href="/monProfil/changer-motdepasse">{{ form_row(modifProfilForm.ModifMDP,  {'attr': {'class': ' btn-primary'}} )}}</a>
    </div>

    {{ form_rest(modifProfilForm)}}


{{ form_end(modifProfilForm) }}
</div>
{% endblock %}
