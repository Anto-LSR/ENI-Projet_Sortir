{% extends 'base.html.twig' %}

{% block title %}Modifier Mot de passe{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <h1 class="text-center mb-5 mt-5">Modifier votre mot de passe</h1>

        {{  form_start(modifMDPForm) }}
        {{ form_row(modifMDPForm.password) }}
        {{ form_row(modifMDPForm.plainPassword) }}
        <div class="button_row d-flex mt-5  justify-content-around">
        {{ form_row(modifMDPForm.submit) }}
            <a href="/profil">{{ form_row(modifMDPForm.Annuler) }}</a>
        </div>
    </div>
{% endblock %}
