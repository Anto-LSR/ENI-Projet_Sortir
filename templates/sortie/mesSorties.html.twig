{% extends 'base.html.twig' %}

{% block title %}Mes sorties{% endblock %}

{% block body %}

    <h2 class="text-center">Mes sorties</h2>

    <table class="table table-striped table-dark text-center ">
    <thead>
    <th>Nom de la sortie</th>
    <th>Date de la sortie</th>
    <th>Lieu</th>
    </thead>
    <tbody>


    {% for sortie in sorties %}
        {% if app.user in sortie.participants or app.user == sortie.organisateur %}

                    <tr>
                        <td><h5>{{ sortie.nom |capitalize }}</h5></td>
                        <td>{{ sortie.dateHeureDebut|date("d/m/Y") }}</td>
                        <td>{{ sortie.lieu.nomLieu}}</td>


                    </tr>

        {% endif %}


    {% endfor %}

{% endblock %}