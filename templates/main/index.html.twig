{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}






    <form action="{{ path('app_main') }}" method="POST">
        <h2>Filtrer les sorties</h2>

        <div class="row col-4">
            <label for="site" class="form-label">Site : </label>
                <select name="site" id="site" class="form-select">
                    <option value="all">Tous les sites</option>
                    {% for site in sites %}
                        <option value="{{ site.id }}">{{ site.nomSite }}</option>
                    {% endfor %}
                </select>

            <label for="recherche" class="form-label">Le nom de la sortie contient : </label>
            <input type="search" id="recherche" name="recherche" class="form-control">
            <div class="row col-6">
                <label for="dateDebut" class="form-label">Entre </label>
                <input type="datetime-local" name="dateDebut" id="dateDebut" class="form-control">
                <label for="dateFin" class="form-label">Et </label>
                <input type="datetime-local" name="dateFin" id="dateFin"class="form-control">
            </div>
        </div>

        <div class="filters_checkbox">
            <input type="checkbox" id="jeSuisOrganisateur" name="jeSuisOrganisateur" class="form-check-input">
            <label for="jeSuisOrganisateur" class="form-check-label">Sorties dont je suis l'organisateur/trice</label>

            <input type="checkbox" id="jeSuisInscrit" name="jeSuisInscrit" class="form-check-input">
            <label for="jeSuisInscrit" class="form-check-label">Sorties auxquelles je suis inscrit/e</label>

            <input type="checkbox" id="jeSuisPasInscrit" name="jeSuisPasInscrit" class="form-check-input">
            <label for="jeSuisPasInscrit" class="form-check-label">Sorties auxquelles je ne suis pas inscrit/e</label>

            <input type="checkbox" id="sortiePassee" name="sortiePassee" class="form-check-input">
            <label for="sortiePassee" class="form-check-label">Sorties passées</label>

        </div>
        <button type="submit" name="submit" class="btn btn-primary">Rechercher</button>
        
        
    </form>
    
    

    <table class="table table-striped table-dark text-center">
        <thead>
            <th>Nom de la sortie</th>
            <th>Date de la sortie</th>
            <th>Clôture</th>
            <th>Inscrits/Places</th>
            <th>Etat</th>
            <th>Inscrit</th>
            <th>Organisateur</th>
            <th>Informations</th>
        </thead>
        <tbody>
        {% for sortie in sorties %}
            {% for parti in participants %}
                {% if parti.id is same as (userId) %}

                    {% if sortie.etat.id == 1 and sortie.organisateur.id != app.user.id %}

                        {% else %}
                        <tr >
                           <td><h5>{{ sortie.nom |capitalize }}</h5></td>
                           <td>{{ sortie.dateHeureDebut|date("d/m/Y")  }}</td>
                           <td>{{ sortie.dateLimiteInscription|date("d/m/Y") }}</td>
                           <td>{{ sortie.participants|length }}/{{ sortie.nbInscriptionsMax }}</td>
                           <td>{{ sortie.etat.libelle }}</td>
                            {% if app.user in sortie.participants %}
                           <td>✔</td>
                                {% else %}
                                    <td></td>
                                    {% endif %}
                           <td><a href="{{path('app_profil',{id:sortie.organisateur.id})}}">{{sortie.organisateur.pseudo |capitalize}}</a></td>


                            <td><a href="{{path('app_detailSortie',{id:sortie.id})}}">Détails</a></td>

                        </tr>
                    {% endif %}
                {% endif %}
            {% endfor %}
        {% endfor %}
        </tbody>
    </table>
    <div class="navigation mt-5">
        {{ knp_pagination_render(sorties) }}
    </div>
{% endblock %}
