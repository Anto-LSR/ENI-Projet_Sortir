{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <form method="post">
        <div class="row text-center">
            {% for messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-success">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}
        </div>
        {% if error %}
            <div class="alert alert-danger">Identifiant ou mot de passe incorrect ðŸ¤™</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                Vous Ãªtes connectÃ© en tant que {{ app.user.pseudo }}, <a href="{{ path('app_logout') }}">Se
                    dÃ©connecter</a>
            </div>
        {% endif %}

        <h1 class="h3 mb-3 font-weight-normal">Se connecter</h1>
        <label for="inputIdentifiant">Identifiant</label>
        <input type="text" value="{{ last_username }}" name="identifiant" id="inputIdentifiant" class="form-control"
               autocomplete="email" required autofocus>
        <label for="inputPassword">Password</label>
        <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password"
               required>

        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
        >

        {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html
        #}
        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Se souvenir de moi
            </label>
        </div>
        <div class="checkbox mb-3">
            <a href="/reset-password">Mot de passe oubliÃ©</a>
        </div>


        <button class="btn btn-lg btn-primary mt-2" type="submit">
            Connexion
        </button>
    </form>
{% endblock %}
