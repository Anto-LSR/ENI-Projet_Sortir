{% extends 'base.html.twig' %}

{% block title %}Affichage Sites{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h3 class="text-center mt-5 mb-5">Gestion des sites</h3>
        <div class="row text-center">
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }}">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}
        </div>


        <h4>Filtrer les sites</h4>


        <div class="formFilter">
            <form method="post" class="mb-5">

                <div class="row">
                    <div class="col col-lg-4">
                        <input type="search" id="rechercher" class="form-control col-4 mt-3"
                               placeholder="Rechercher un site 🔍" name="rechercher">
                    </div>
                    <div class="col col-lg-6">
                        <button type="submit" class="btn btn-primary mt-3">Rechercher</button>
                    </div>
                </div>


            </form>
        </div>

        <table class="table table-striped table-light text-center">
            <thead>
                <th>Nom</th>
                <th>Supprimer</th>
            </thead>
            <tbody>
                {% for site in sites %}
                    <tr>
                        <td><h5>{{ site.nomSite |capitalize }}</h5></td>
                        <td><a href="{{ path('app_suppressionSite', {id:site.id}) }}"><i class="fa-solid fa-trash"></i></a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
            <tfoot>
                <tr>
                    <th scope="row">Ajouter un nouveau site</th>
                    <td><a href="{{ path('app_site') }}"><i class="fa-solid fa-circle-plus"></i></a></td>
                </tr>
            </tfoot>
        </table>
    </div>
{% endblock %}