{% extends 'base.html.twig' %}

{% block title %}Ajouter un Site{% endblock %}

{% block body %}
    <div class="border rounded p-4 offset-2 col-8 shadow">
        <h3 class="text-center p-4">Ajouter un site</h3>

            <div class="row text-center">
                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="alert alert-{{ label }}">
                            {{ message }}
                        </div>
                    {% endfor %}
                {% endfor %}
            </div>

        {{ form_start(ajoutSiteForm) }}



        <div class="row mt-3 text-center">

            <div class="row offset-2 col-9">

                    <div class="col-6">
                        {{ form_widget(ajoutSiteForm.nomSite, {'attr': {'placeholder': 'Ex: Paris...'}}) }}
                    </div>
                    <div class="col-2">
                        {{ form_row(ajoutSiteForm.Ajouter) }}
                    </div>
                    <div class="col-2">
                        <a href="{{ path('app_listeSites') }}" class="btn btn-primary">Retour</a>
                    </div>
            </div>
        </div>

        {{ form_end(ajoutSiteForm) }}
    </div>
{% endblock %}
